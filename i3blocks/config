[datetime]
label=ï³
command=date '+%a, %b %d, %H:%M:%S'
interval=1
separator_block_width=15
color=#8be9fd
align=center

[cpu]
label=ï‹›
command=top -bn1 | grep "Cpu(s)" | awk '{print 100 - $8 "%"}'
interval=5
separator_block_width=15
color=#ff79c6
align=center

[memory]
label=ó°›
command=free -m | awk '/Mem:/ {print int($3/$2 * 100.0)"% ("$3"MB/ "$2"MB)"}'
interval=10
separator_block_width=15
color=#bd93f9
align=center

[disk]
label=ïŸ‰
command=df -h / | awk 'NR==2 {print $5 " (" $3 "/" $2 ")"}'
interval=60
separator_block_width=15
color=#50fa7b
align=center

[network]
label=ï‡«
command=iwgetid -r
interval=30
separator_block_width=15
color=#ffb86c
align=center

