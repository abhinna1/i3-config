[volume]
label=ï€¨
command=pactl get-sink-volume @DEFAULT_SINK@ | grep -oP '\d+%' | head -1
interval=1
separator_block_width=15
color=#f1fa8c
align=center

[battery]
label=ï‰€
command=bash -c 'status=$(acpi -b | awk "{print \$3}" | sed "s/,//"); percentage=$(acpi -b | awk -F", " "{print \$2}" | awk "{print \$1}"); if [ "$status" = "Charging" ]; then echo "ğŸ”Œ $percentage"; else echo " $percentage"; fi'
interval=1
separator_block_width=15
color=#8be9fd
align=center

